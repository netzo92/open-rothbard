# ── LLM ──────────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=

# ── Coinbase CDP (wallet / onchain ops) ──────────────────────────────────────
CDP_API_KEY_NAME=
CDP_API_KEY_PRIVATE_KEY=
# base-mainnet | base-sepolia (testnet, for dev)
NETWORK_ID=base-sepolia

# ── Agent behavior ────────────────────────────────────────────────────────────
SCAN_INTERVAL_MINUTES=15
# Minimum USDC balance to execute a trade
MIN_TRADE_USDC=10
# Max % of treasury that can be spent on infra per cycle
MAX_INFRA_SPEND_PCT=0.10
# % of profit reinvested vs held as reserve
PROFIT_REINVEST_PCT=0.70
# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO
# Audit mode: true = pause and ask user before every real-world action
# Strongly recommended when running on mainnet for the first time
AUDIT_MODE=false

# ── Infrastructure ────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379
CHROMA_HOST=localhost
CHROMA_PORT=8000
SQLITE_PATH=./data/rothbard.db
WALLET_PATH=~/.rothbard/wallet.json

# ── Solana wallet ─────────────────────────────────────────────────────────────
# mainnet-beta: https://api.mainnet-beta.solana.com
# devnet (for dev): https://api.devnet.solana.com
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_KEYPAIR_PATH=~/.rothbard/solana_keypair.json

# ── x402 payment server ───────────────────────────────────────────────────────
X402_PORT=8402
# Price in USDC for one premium API call
X402_PRICE_USDC=0.01
